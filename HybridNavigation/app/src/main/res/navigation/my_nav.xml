<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/settingsFragment"
        android:name="ninja.codezombie.hybridnavigation.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/fullscreenFragment"
        android:name="ninja.codezombie.hybridnavigation.FullscreenFragment"
        android:label="fragment_fullscreen"
        tools:layout="@layout/fragment_fullscreen" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="ninja.codezombie.hybridnavigation.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/composeFragment"
        android:name="ninja.codezombie.hybridnavigation.ComposeFragment"
        android:label="fragment_compose"
        tools:layout="@layout/fragment_compose" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="ninja.codezombie.hybridnavigation.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>